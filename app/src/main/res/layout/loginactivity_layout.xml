<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="146dp"
        android:layout_height="131dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/app_icon_login"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="@string/loginwith_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="32sp"
        android:id="@+id/app_name_login"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/app_icon_login"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <com.twitter.sdk.android.core.identity.TwitterLoginButton
        android:id="@+id/twitter_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/app_name_login"
        app:layout_constraintVertical_bias="0.060000002" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/google_signin_button"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="@+id/twitter_login_button"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/twitter_login_button"
        app:layout_constraintLeft_toLeftOf="@+id/twitter_login_button" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebook_login_button"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/google_signin_button"
        app:layout_constraintRight_toRightOf="@+id/google_signin_button"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/google_signin_button"
        app:layout_constraintHorizontal_bias="1.0" />


</android.support.constraint.ConstraintLayout>